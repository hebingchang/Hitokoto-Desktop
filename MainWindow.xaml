<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hitokoto"
        xmlns:wpflib="clr-namespace:BLCTClassLibrary.WpfLib;assembly=BLCTClassLibrary.WpfLib" 
        xmlns:tb="http://www.hardcodet.net/taskbar"        
        mc:Ignorable="d"
        Title="MainWindow" Height="64.764" Width="504.532" AllowsTransparency="True" WindowStyle="None" Background="#00FFFFFF" Topmost="True">
    <Grid Width="{Binding Width, ElementName=w}" Height="{Binding Height, ElementName=w}" >
        <Border CornerRadius="5" Margin="10" Opacity="0.8">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" Color="#FF414141" BlurRadius="8"/>
            </Border.Effect>
            <Border Background="Black" Opacity="0.5" Margin="0" CornerRadius="5"/>
        </Border>
        <Label x:Name="lblText" Content="文本" HorizontalAlignment="Left" Margin="13,14,0,0" VerticalAlignment="Top" FontSize="20" Foreground="White"/>
        <!--<wpflib:StrokeableLabel x:Name="lblText" HorizontalAlignment="Left" Text="测试文本" Fill="Black" Stroke="White" StrokeThickness="0.4" FontWeight="200" FontSize="24" Margin="18,17,0,18"/>-->

    </Grid>
</Window>
